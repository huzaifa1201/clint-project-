rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    // Note: This relies on the 'users' document existing and having a 'role' field.
    function isAdmin() {
      return request.auth != null && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN' || 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // User profiles
    match /users/{userId} {
      // Allow users to create their own profile document during signup
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to read/update their own profile; Admins can manage all
      allow read, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Products & Categories: Anyone can view; Only admins can modify
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Banners & Support Content: Anyone can view; Only admins can modify
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /support_pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Users can create and view their own; Admins can manage all
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // Contact Messages: Anyone can send; Only admins can view/clear
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }

    // Site Configuration (Social links, Ads): Public read, Admin write (Relaxed for debugging)
    match /site_config/{configId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Newsletter Subscriptions: Public create, Admin read/delete
    match /newsletter_subs/{subId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }
  }
}